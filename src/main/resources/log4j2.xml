<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
<Appenders>
    <Console name="Console" target="SYSTEM_OUT">
        <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5.5p [%-12.12t] %-40.40c - %m%n%throwable"/>
    </Console>
</Appenders>
<Loggers>
    <Logger name="fr.braindead" level="INFO" additivity="false">
        <AppenderRef ref="Console" />
    </Logger>
    <Logger name="org.xnio" level="WARN" additivity="false">
        <AppenderRef ref="Console" />
    </Logger>
    <Root level="WARN">
        <AppenderRef ref="Console" />
    </Root>
</Loggers>
</Configuration>